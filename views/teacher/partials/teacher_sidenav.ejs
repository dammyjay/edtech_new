<script>
  const sidenav = document.getElementById("sidenav");
  const toggleBtn = document.getElementById("toggleBtn");
  const mainContent = document.querySelector(".main-content");

  toggleBtn.addEventListener("click", (e) => {
    e.stopPropagation();
    sidenav.classList.toggle("active");
  });

  
  // Close when clicking a link inside sidenav
  sidenav.querySelectorAll("a").forEach(link => {
    link.addEventListener("click", () => {
      if (window.innerWidth <= 768) { // only on mobile
        sidenav.classList.remove("active");
      }
    });
  });

  // Close when clicking outside sidenav
  document.addEventListener("click", (e) => {
    if (
      window.innerWidth <= 768 && // only mobile
      sidenav.classList.contains("active") && 
      !sidenav.contains(e.target) && 
      e.target !== toggleBtn
    ) {
      sidenav.classList.remove("active");
    }
  });


  // load section dynamically
  async function loadSection(section) {
    try {
      const res = await fetch(`/teacher/section/${section}`);
      const html = await res.text();
      mainContent.innerHTML = html;
      if (window.innerWidth <= 768) sidenav.classList.remove("active");
    } catch (err) {
      mainContent.innerHTML = "<p style='color:red'>Error loading section</p>";
    }
  }

  // load dashboard on page load
  window.addEventListener("DOMContentLoaded", () => loadSection("dashboard"));
</script>

