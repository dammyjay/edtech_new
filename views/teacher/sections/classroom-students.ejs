<!-- Charts -->
<h2>üìà Class Analytics</h2>
<div style="display:flex; gap:30px; flex-wrap:wrap;">
  <div style="flex:1; min-width:300px;">
    <h3>Progress Distribution</h3>
    <canvas id="progressChart"></canvas>
  </div>
  <div style="flex:1; min-width:300px;">
    <h3>Quiz Performance</h3>
    <canvas id="quizChart"></canvas>
  </div>
</div>

<!-- Student Table -->
<h2>üë• Student Details</h2>
<div class="table-responsive">
  <table class="user-table" border="1" cellpadding="8" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>ID</th>
        <th>Full Name</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Lessons</th>
        <th>Quiz Avg</th>
        <th>Assignment Avg</th>
        <th>Last Active</th>
      </tr>
    </thead>
    <tbody>
      <% if (students.length > 0) { %>
        <% students.forEach(stu => { %>
          <tr>
            <td><%= stu.id %></td>
            <td><%= stu.fullname %></td>
            <td><%= stu.email %></td>
            <td><%= stu.gender || "‚Äì" %></td>
            <td><%= stu.lessons_completed %> / <%= stu.total_lessons %></td>
            <td><%= stu.avg_quiz_score || "‚Äì" %></td>
            <td><%= stu.avg_assignment_score || "‚Äì" %></td>
            <td><%= stu.last_login ? stu.last_login.toLocaleString() : "Never" %></td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="8">No students found in this class.</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  // Gender chart
  new Chart(document.getElementById('genderChart'), {
    type: 'doughnut',
    data: {
      labels: <%- JSON.stringify(genderSummary.map(g => g.gender || "Unknown")) %>,
      datasets: [{
        data: <%- JSON.stringify(genderSummary.map(g => parseInt(g.count))) %>,
        backgroundColor: ['#36A2EB', '#FF6384', '#FFCE56']
      }]
    }
  });

  // Progress distribution
  new Chart(document.getElementById('progressChart'), {
    type: 'bar',
    data: {
      labels: ['0‚Äì49%', '50‚Äì74%', '75‚Äì100%'],
      datasets: [{
        label: 'Number of Students',
        data: [<%= progressDist.low %>, <%= progressDist.mid %>, <%= progressDist.high %>],
        backgroundColor: ['#e74c3c', '#f39c12', '#27ae60']
      }]
    },
    options: { responsive: true, plugins: { legend: { display: false } } }
  });

  // Quiz scores per student
  new Chart(document.getElementById('quizChart'), {
    type: 'bar',
    data: {
      labels: <%- JSON.stringify(students.map(s => s.fullname)) %>,
      datasets: [{
        label: 'Avg Quiz Score',
        data: <%- JSON.stringify(students.map(s => s.avg_quiz_score || 0)) %>,
        backgroundColor: '#2980b9'
      }]
    },
    options: { responsive: true, plugins: { legend: { display: false } } }
  });
</script>
