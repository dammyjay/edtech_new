<h2>ðŸ’³ Payments</h2>

<div class="table-responsive">
    <table class="user-table border="1" cellpadding="8" cellspacing="0" style="width:100%; border-collapse:collapse;">
    <thead>
        <tr>
        <th>Student</th>
        <th>Amount</th>
        <th>Status</th>
        <th>Updated At</th>
        <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% if (payments.length > 0) { %>
        <% payments.forEach(p => { %>
            <tr>
            <td><%= p.fullname %></td>
            <td>$<%= p.amount %></td>
            <td><%= p.status %></td>
            <td><%= new Date(p.updated_at).toLocaleString() %></td>
            <td>
                <form action="/school-admin/payments/update" method="POST" style="display:inline;">
                <input type="hidden" name="paymentId" value="<%= p.id %>">
                <select name="status">
                    <option value="pending" <%= p.status==='pending'?'selected':'' %>>Pending</option>
                    <option value="paid" <%= p.status==='paid'?'selected':'' %>>Paid</option>
                    <option value="failed" <%= p.status==='failed'?'selected':'' %>>Failed</option>
                </select>
                <button type="submit">ðŸ’¾ Save</button>
                </form>
            </td>
            </tr>
        <% }) %>
        <% } else { %>
        <tr><td colspan="5">No payments found.</td></tr>
        <% } %>
    </tbody>
    </table>
</div>