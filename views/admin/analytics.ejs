async function loadCourses() {
  const data = await fetchJSON('/admin/stats/courses');
  document.getElementById('cardCourses').innerText = data.counts.total_courses;

  // Extract values
  const labels = data.topCourses.map(c => c.title);
  const individual = data.topCourses.map(c => c.individual_enrollments);
  const school = data.topCourses.map(c => c.school_enrollments);

  // Draw stacked bar chart
  const ctx = document.getElementById('topCoursesChart').getContext('2d');
  if (topCoursesChart) topCoursesChart.destroy();
  topCoursesChart = new Chart(ctx, {
    type: 'bar',
    data: {
      labels,
      datasets: [
        { label: 'Individual Students', data: individual, backgroundColor: '#42A5F5' },
        { label: 'School Students', data: school, backgroundColor: '#66BB6A' }
      ]
    },
    options: {
      indexAxis: 'y',
      responsive: true,
      plugins: { legend: { position: 'top' } },
      scales: { x: { stacked: true }, y: { stacked: true } }
    }
  });

  // Courses Table (with both student types)
  const wrap = document.getElementById('coursesTableWrap');
  let html = `
    <h3>Top Courses</h3>
    <table class="user-table">
      <thead>
        <tr>
          <th>Course</th>
            <th>Total Lessons</th>
            <th>Avg Completed Lessons</th>
            <th>Individual Students</th>
            <th>School Students</th>
            <th>Total Enrollments</th>
            <th>Avg Progress</th>
        </tr>
      </thead>
      <tbody>
  `;
  data.topCourses.forEach(c => {
    html += `
    <tr>
        <td>${c.title}</td>
        <td>${c.total_lessons}</td>
        <td>${c.avg_completed_lessons}</td>
        <td>${c.individual_enrollments}</td>
        <td>${c.school_enrollments}</td>
        <td>${c.total_enrollments}</td>
        <td>${c.avg_progress}%</td>
    </tr>
    `;
  });
  html += '</tbody></table>';
  wrap.innerHTML = html;
}

  async function loadQuizzes() {
    const data = await fetchJSON('/admin/stats/quizzes');
    document.getElementById('cardAvgQuiz').innerText = data.summary.avg_score || '—';
    const labels = data.passFail.map(r => r.passed ? 'Passed' : 'Failed');
    const values = data.passFail.map(r => r.count);
    const ctx = document.getElementById('quizPassFailChart').getContext('2d');
    if (quizChart) quizChart.destroy();
    quizChart = new Chart(ctx, {
      type: 'doughnut',
      data: { labels, datasets: [{ data: values }] }
    });
  }

  async function loadActivity() {
    const data = await fetchJSON('/admin/stats/activity');
    const feed = document.getElementById('activityFeed');
    feed.innerHTML = data.feed.map(it => `<div style="border-bottom:1px solid #eee;padding:6px 0;"><small style="color:#666">${new Date(it.created_at).toLocaleString()}</small><div><strong>${it.role || 'User'}</strong>: ${it.action}</div><div style="color:#333">${it.details || ''}</div></div>`).join('');
  }

  async function loadEventPaymentDetails() {
  const data = await fetchJSON("/admin/stats/event-payments/details");

  let html = `
    <h4>Event Payment Details</h4>
    <table class="user-table">
      <thead>
        <tr>
          <th>User</th>
          <th>Email</th>
          <th>Event</th>
          <th>Status</th>
          <th>Amount</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
  `;

  data.forEach(row => {
    html += `
      <tr>
        <td>${row.fullname}</td>
        <td>${row.email}</td>
        <td>${row.event_title}</td>
        <td>${row.payment_status}</td>
        <td>${row.amount}</td>
        <td>${new Date(row.created_at).toLocaleString()}</td>
      </tr>
    `;
  });

  html += "</tbody></table>";

  document.getElementById("eventPaymentDetails").innerHTML = html;
}


  async function refreshAll() {
    try {
      document.getElementById('refreshBtn').disabled = true;
      await Promise.all([ loadOverview(), loadUsers(), loadCourses(), loadQuizzes(), loadActivity(), loadFinance() ]);
    } catch (err) {
      console.error(err);
      alert('Failed to load analytics: ' + err.message);
    } finally {
      document.getElementById('refreshBtn').disabled = false;
    }
  }

  document.getElementById('refreshBtn').addEventListener('click', refreshAll);

  // initial load
  refreshAll();


