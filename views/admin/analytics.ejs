<script>
  async function fetchJSON(path) {
    const res = await fetch(path, {credentials: 'same-origin'});
    if (!res.ok) throw new Error('Failed '+path);
    return res.json();
  }

  let rolesChart, topCoursesChart, quizChart, revenueChart;

  async function loadOverview() {
    const data = await fetchJSON('/admin/stats/overview');
    document.getElementById('cardTotalUsers').innerText = data.totalUsers;
    document.getElementById('cardDAU').innerText = data.dau;
    document.getElementById('cardNew7').innerText = data.newUsers.new_7d;
  }

    async function loadFinance() {
    const data = await fetchJSON('/admin/stats/finance');

    // Update cards
    document.getElementById('cardTotalRevenue').innerText = data.revenue.total_revenue;
    document.getElementById('cardRevenue30d').innerText = data.revenue.revenue_30d;

    // Revenue Chart (simple example: last 30d vs earlier)
    const labels = ['Last 30d', 'Earlier'];
    const values = [
        parseFloat(data.revenue.revenue_30d),
        parseFloat(data.revenue.total_revenue) - parseFloat(data.revenue.revenue_30d)
    ];
    const ctx = document.getElementById('revenueChart').getContext('2d');
    if (revenueChart) revenueChart.destroy();
    revenueChart = new Chart(ctx, {
        type: 'bar',
        data: { labels, datasets: [{ label: 'Revenue', data: values, backgroundColor: '#4caf50' }] }
    });

    // Optional: school payments table
    const schoolWrap = document.getElementById('schoolPaymentsTableWrap');
    let html = '<h3>School Payments</h3><table class="user-table"><thead><tr><th>Status</th><th>Count</th></tr></thead><tbody>';
    data.schoolPayments.forEach(p => {
        html += `<tr><td>${p.status}</td><td>${p.count}</td></tr>`;
    });
    html += '</tbody></table>';
    schoolWrap.innerHTML = html;

    // Optional: event payments table
    const eventWrap = document.getElementById('eventPaymentsTableWrap');
    html = '<h3>Event Payments</h3><table class="user-table"><thead><tr><th>Status</th><th>Count</th><th>Total Collected</th></tr></thead><tbody>';
    data.eventPayments.forEach(p => {
        html += `<tr><td>${p.payment_status}</td><td>${p.count}</td><td>${p.total_collected}</td></tr>`;
    });
    html += '</tbody></table>';
    eventWrap.innerHTML = html;
    }

  async function loadUsers() {
    const data = await fetchJSON('/admin/stats/users');
    // roles chart
    const labels = data.byRole.map(r => r.role);
    const values = data.byRole.map(r => r.count);
    const ctx = document.getElementById('rolesChart').getContext('2d');
    if (rolesChart) rolesChart.destroy();
    rolesChart = new Chart(ctx, {
      type: 'pie',
      data: { labels, datasets: [{ data: values }] }
    });
  }

