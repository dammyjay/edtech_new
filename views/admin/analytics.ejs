      </div>

      <div class="chart-card">
        <h4>Recent Activity</h4>
        <div class="activity-feed" id="activityFeed"></div>
      </div>

      <div class="chart-card">
            <h4>Revenue Trend (Last 30d)</h4>
            <canvas id="revenueChart" height="150"></canvas>
        </div>
    </div>

    <!-- table for course details -->
    <div class="table-responsive" id="coursesTableWrap"></div>
    <div class="table-responsive" id="schoolPaymentsTableWrap"></div>
    <div class="table-responsive" id="eventPaymentsTableWrap">
        <h3>
        Event Payments 
        <button onclick="loadEventPaymentDetails()">View Details</button>
