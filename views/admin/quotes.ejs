
<%- include('../partials/adminHeader', { title: 'Quotes' }) %>

<h2>All Quotes</h2>
<div class="table-responsive">
  <table class="user-table" style="width:100%; margin-top:20px;">
    <thead>
      <tr>
        <th>School Name</th>
        <th>Requested Students</th>
        <th>Price Quote</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% quotes.forEach(q => { %>
        <tr>
          <td><%= q.school_name %></td>
          <td><%= q.requested_students %></td>
          <td><%= q.price_quote %></td>
          <td><%= q.status %></td>
          <td>
            <!-- Approve/Reject -->
            <% if (q.status === 'pending') { %>
              <form action="/admin/quotes/<%= q.id %>/approve" method="POST" style="display:inline;">
                <button type="submit" class="btn-approve">‚úÖ Approve</button>
              </form>
              <form action="/admin/quotes/<%= q.id %>/reject" method="POST" style="display:inline;">
                <button type="submit" class="btn-reject">‚ùå Reject</button>
              </form>
            <% } %>

            <!-- Assign Courses -->
            <a href="/admin/school-courses?school_id=<%= q.school_id %>" class="btn-assign">
              üéì Assign Courses
            </a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>



