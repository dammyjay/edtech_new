      async function verifyOtp() {
        const otp = document.getElementById("otp-input").value;
        const email = document.querySelector("input[name='email']").value;
        const verifyBtn = document.getElementById("verifyBtn");
        const spinner = document.getElementById("spinner2");

        const res = await fetch("/verify-otp", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ email, otp }),
        });
        spinner2.style.display = "inline-block";
        verifyBtn.disabled = true;

        const data = await res.json();
        alert(data.message); // show school ID alert

        if (data.success) {
          // Hide OTP modal
          document.getElementById("otp-modal").style.display = "none";

          // Redirect to login
          setTimeout(() => {
            window.location.href = "/admin/login";
          }, 1000);
        }
      }

      const passwordInput = document.getElementById("password");
      const togglePassword = document.getElementById("togglePassword");
      const icon = togglePassword.querySelector("i");

      togglePassword.addEventListener("click", () => {
        const isHidden = passwordInput.type === "password";
        passwordInput.type = isHidden ? "text" : "password";

        // swap the icon
        icon.classList.toggle("fa-eye");
        icon.classList.toggle("fa-eye-slash");
        }
      );

      // Handle image preview
      const fileInput = document.getElementById("file-input");
      const previewContainer = document.getElementById("preview-container");
      const previewImage = document.getElementById("preview-image");

      fileInput.addEventListener("change", function () {
        const file = this.files[0];
        if (file) {
          const reader = new FileReader();
          reader.onload = function (e) {
            previewContainer.style.display = "flex"; // Display the preview container
            previewImage.src = e.target.result; // Set the image source to the selected file
          };
          reader.readAsDataURL(file); // Read the file as a data URL
        } else {
          previewContainer.style.display = "none"; // Hide the preview if no file is selected
        }
      });
    
      const roleSelect = document.getElementById("role");
      const schoolAdminFields = document.getElementById("school-admin-fields");
      const schoolIdField = document.getElementById("school-id-field");
      const schoolNameDisplay = document.getElementById("school-name-display");
      const schoolIdInput = document.getElementById("schoolId");
      const emailcheck = document.getElementById("emailcheck");
      const emailInput = emailcheck.querySelector("input[name='email']");

      roleSelect.addEventListener("change", () => {
        const role = roleSelect.value;
        schoolAdminFields.style.display = "none";
        schoolIdField.style.display = "none";
        emailcheck.style.display = "block"; // default visible
        

        if (role === "school_admin") {
          schoolAdminFields.style.display = "block";
        } 
        if (role === "teacher" || role === "student") {
          schoolIdField.style.display = "block";
        }

        if (role === "student") {
          // hide and disable email field
          emailcheck.style.display = "none"; 
          // remove "required" so browser won't block submit
          emailInput.removeAttribute("required");
          // clear any existing value
          emailInput.value = "";
        }
      });


      // Auto-check school name when schoolId is entered
      schoolIdInput?.addEventListener("blur", async () => {
        const schoolId = schoolIdInput.value.trim();
        if (!schoolId) return;

        try {
          const res = await fetch(`/api/check-school/${schoolId}`);
          if (res.ok) {
            const data = await res.json();
            schoolNameDisplay.textContent = `✅ School found: ${data.name}`;
            schoolNameDisplay.style.color = "green";
          } else {
            schoolNameDisplay.textContent = "❌ School not found";
            schoolNameDisplay.style.color = "red";
          }
        } catch (err) {
          console.error("Error checking school:", err);
        }
      });

      const schoolLogoInput = document.getElementById("schoolLogo");
const schoolLogoPreview = document.getElementById("schoolLogoPreview");

schoolLogoInput.addEventListener("change", function () {
  const file = this.files[0];
  if (file) {
    const reader = new FileReader();
    reader.onload = function (e) {
      schoolLogoPreview.src = e.target.result;
      schoolLogoPreview.style.display = "block";
    };
    reader.readAsDataURL(file);
  } else {
    schoolLogoPreview.style.display = "none";
  }
});


